<ol class="list-group list-group-horizontal">
  <% @letters.each do |letter| %>
    <li class="list-group-item list-group-item-primary"><%= letter %></li>
  <% end %>
</ol>

<form class="form" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :totalscore, @totalscore %>
  <input type="text" name="answer" placeholder="Your Word">
  <input type="submit">
</form>